<div class="page_content_offset">
				<div class="container">
					<div class="row clearfix">
						<section class="col-lg-12 col-md-12 col-sm-12 m_xs_bottom_30">
							<h2 class="tt_uppercase color_dark m_bottom_25">Корзина</h2>
							<!--cart table-->
							<table class="table_type_4 responsive_table full_width r_corners wraper shadow t_align_l t_xs_align_c m_bottom_30">
								<thead>
									<tr class="f_size_large">
										<!--titles for td-->
										<th>Название</th>
										<th>Артикул</th>
										<th>Цена</th>
										<th>Количество</th>
										<th>Стоимость</th>
									</tr>
								</thead>
								<tbody>
								
								<% @cart.line_items.each do |item|  %>
									<tr>
										<!--Product name and image-->
										<td data-title="Product Image &amp; name" class="t_md_align_c">
											<img src="<%= item.product.image %>" alt="" class="m_md_bottom_5 d_xs_block d_xs_centered">
											<a href="#" class="d_inline_b m_left_5 color_dark"><%= item.product.name %></a>
										</td>
										<!--product key-->
										<td data-title="SKU"><%= item.product.code %></td>
										<!--product price-->
										<td data-title="Price">
											<p class="f_size_large color_dark"><%= item.product.price %></p>
										</td>
										<!--quanity-->
										<td data-title="Quantity">
											<div class="clearfix quantity r_corners d_inline_middle f_size_medium color_dark m_bottom_10">
												<%= item.quantity %>
											</div>
											<div>
											</div>
										</td>
										<!--subtotal-->
										<td data-title="Subtotal">
											<p class="f_size_large fw_medium scheme_color"> </p>
										</td>
									</tr>

								<% end %>
									
									<tr>
										<td colspan="4" class="v_align_m d_ib_offset_large t_xs_align_l">
											<!--coupon-->
											<form class="d_ib_offset_0 d_inline_middle half_column d_xs_block w_xs_full m_xs_bottom_5">
												
											</form>
											<p class="fw_medium f_size_large t_align_r scheme_color p_xs_hr_0 d_inline_middle half_column d_ib_offset_normal d_xs_block w_xs_full t_xs_align_c">Всего:</p>
										</td>
										<td colspan="1" class="v_align_m">
											<p class="fw_medium f_size_large scheme_color m_xs_bottom_10"><%= @cart.total_price %> р.</p>
										</td>
									</tr>
									
								</tbody>
							</table>
							<!--tabs-->
							<h2 class="color_dark tt_uppercase m_bottom_25">Информация о доставке</h2>
							<div class="bs_inner_offsets bg_light_color_3 shadow r_corners m_bottom_45">
								<div class="row clearfix">
									<div class="col-lg-6 col-md-6 col-sm-6 m_xs_bottom_30">
										<form>
											<ul>
												<li class="m_bottom_15">
													<label for="c_name_1" class="d_inline_b m_bottom_5">Имя</label>
													<input type="text" id="c_name_1" name="" class="r_corners full_width">
												</li>
												<li class="m_bottom_15">
													<label for="c_name_1" class="d_inline_b m_bottom_5">Фамилия</label>
													<input type="text" id="c_name_1" name="" class="r_corners full_width">
												</li>
												<li class="m_bottom_15">
													<label for="c_name_1" class="d_inline_b m_bottom_5">Телефон</label>
													<input type="text" id="c_name_1" name="" class="r_corners full_width">
												</li>
											</ul>
										</form>
									</div>
								</div>
							</div>
							<!--requests table-->
							<table class="table_type_5 full_width r_corners wraper shadow t_align_l">
								<tr>
									<td colspan="2">
										<label for="notes" class="d_inline_b m_bottom_5">Примечания и особые просьбы:</label>
										<textarea id="notes" class="r_corners notes full_width"></textarea>
									</td>

								<tr>
									<td colspan="2">
										<button class="button_type_6 bg_scheme_color f_size_large r_corners tr_all_hover color_light m_bottom_20">Отправить заказ</button>
									</td>
								</tr>
							</table>
						</section>
					</div>
				</div>
</div>